{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "rootDir": ".",
        "types": [
            "node"
        ],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true,
        "stripInternal": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "../../lib/tools",
        "tsBuildInfoFile": "../../lib/tools/publish.tsbuildInfo",
        "incremental": true
    },
    "include": [
        "."
    ]
}